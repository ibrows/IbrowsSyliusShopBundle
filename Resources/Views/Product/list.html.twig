{% extends 'IbrowsSyliusShopBundle::baselayout.html.twig' %}

{% set grid = app.request.query.get('grid', false) %}

{% block content %}
<div class="page-header">
<h1>Product list</h1>
</div>



{% if products|length > 0 %}

    {% for i, entity in products %}
    {% set form = sylius_cart_form() %}
                    <li>
                       {{ entity.code }} <a href="{{ path('sylius_product_show', { 'slug':entity.slug }) }}">{{ entity.name }}</a>
                       {% if entity.inStock %}
                       <form action="{{ path('cart_item_add', {'id': entity.id }) }}" method="post" >
                       {{ entity.inStock }}
                            {{ form_widget(form) }}

                            <input type="submit" />
                       </form>
                       {% else %}
                       ausverkauft
                       {% endif %}
                    </li>

    {% endfor %}

{% else %}
<hr />
<div class="alert alert-info">
    <h4 class="alert-heading">Information.</h4>
    There are no products to display.
</div>
{% endif %}



{% endblock %}
