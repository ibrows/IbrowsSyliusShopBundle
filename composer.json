{
    "name":         "ibrows/sylius-shop-bundle",
    "description":  "Ibrows Sylius Shop Bundle integration",
    "keywords":     ["ibrows", "sylius", "shop"],
    "type":         "symfony-bundle",
    "license":      "MIT",
    "authors": [
        {
            "name": 	"Marc Steiner",
            "email":	"marc.steiner@ibrows.ch"
        },
        {
            "name":     "Mike Meier",
            "email":    "mike.meier@ibrows.ch"
        }
    ],
    "require": {
        "php": ">=5.3.0",

        "symfony/symfony": "2.3.*",

        "sylius/cart-bundle": "~1.0",
        "sylius/inventory-bundle": "~1.0",
        "sylius/resource-bundle": "~1.0",

        "friendsofsymfony/user-bundle": "*",
        "stof/doctrine-extensions-bundle": "~1.1",
        "sonata-project/doctrine-orm-admin-bundle": "~2.2",
        "sonata-project/cache-bundle": "~2.1",
        "sonata-project/intl-bundle": "~2.1",

        "ibrows/wizard-annotation-bundle": "1.*",
        "ibrows/sonata-admin-annotation-bundle": "2.*",

        "payment/saferpay-bundle": "2.*",
        "payment/httpclient-buzz": "1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
   "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:ibrows/SyliusCartBundle.git"
        },
        {
            "type": "vcs",
            "url":  "git@github.com:ibrows/SyliusResourceBundle.git"
        },
        {
            "type": "vcs",
            "url":  "git@github.com:ibrows/SyliusInventoryBundle.git"
        }
    ], 
    "autoload": {
        "psr-0": { "Ibrows\\SyliusShopBundle": "" }
    },
    "target-dir": "Ibrows/SyliusShopBundle"
}
